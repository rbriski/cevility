<div class="container">
<div class="text-center col-md-4 col-md-offset-4">

<div id='alerts'>
</div>

<h1>Your licenses</h1>

<% unless @current_user.licenses.blank? %>
  <table class='table'>
  <% @current_user.licenses.each do | license | %>
    <form action="/license/<%= license.id %>" method="POST">
    <input type="hidden" name="_method" value="delete">
    <tr><td class='license'>
      <a href="/set/<%= license.number %>">
      <button type='button' class="btn btn-default">
      <%= license.number %>
      </button>
      </a>
      <button type="submit" class="btn btn-link"><span class="glyphicon glyphicon-remove"></span></button>
    </td></tr>
    </form>
  <% end %>
  </table>

<% else %>

You don't have any licenses

<% end %>


</div>
</div>